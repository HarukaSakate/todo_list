<h1>Edit Todo</h1>

<%= form_with model: @todo, local: true do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :completed %>
        <%= form.check_box :completed %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

<%= link_to 'Back', todos_path %>
